<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VideoPlayer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.VideoPlayer" parent="Base.Theme.VideoPlayer" />


    <attr name="ThemeColor" format="color"/>
    
    
    //custom theme
    <style name="coolpink" parent="Theme.MaterialComponents.Light">
        <item name="ThemeColor">@color/cool_pink</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">?attr/ThemeColor</item>
        <item name="colorPrimaryDark">?attr/ThemeColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">?attr/ThemeColor</item>
        <item name="android:statusBarColor">?attr/ThemeColor</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

